@using Project.Models
@model Department

<h3>@Html.DisplayFor(model => model.Name)</h3>

<div class="row">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Graduation year</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Instructor item in ViewBag.InList)
                {
                    if (@item.Id == Model.ManagerId)
                    {
                        <tr id="@item.Id" style="background-color:lightgreen">
                            <td>@item.Name</td>
                            <td>@item.GraduationYear</td>
                        </tr>
                    }
                    else
                    {
                        <tr id="@item.Id">
                            <td>@item.Name</td>
                            <td>@item.GraduationYear</td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>


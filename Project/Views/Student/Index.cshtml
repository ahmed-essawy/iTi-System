@model IEnumerable<Project.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

@Ajax.ActionLink("New Student", "Create", "Student", new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "ModalBody" }, new { @class = "btn btn-link", @onclick = "$('#StudentModal').modal('show')" })

<span id="resp" class="alert-success text-capitalize text-success" style="float: right; display: none"></span>
<style>
    .loader {
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 120px;
        height: 120px;
        -webkit-animation: spin 2s linear infinite;
        animation: spin 2s linear infinite;
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthdate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsMarried)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Degrees)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var item in Model)
            {
                @Html.Partial("Row", item)
            }
        </tbody>
    </table>
</div>

<div id="StudentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Student</h4>
            </div>
            <div id="ModalBody" class="modal-body"></div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function Delete(Id) {
            $("#StudentModal").modal("show")
                .find("#ModalBody").text("Are you sure you want to delete ?")
                .after('<div class="modal-footer"><a class="btn btn-danger" data-ajax="true" data-ajax-method="Post" data-ajax-success="Deleted" href="/Student/Delete/' + Id + '">Yes</a><button type="button" class="btn btn-primary" data-dismiss="modal">Close</button></div>');
        }
        function Deleted(data) {
            $("#StudentModal").modal("hide").find("#ModalBody").html("").siblings(".modal-footer").remove();
            $("#" + data.Id).fadeOut(2000);
        }
    </script>
}
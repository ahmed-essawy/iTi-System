@model Project.Models.Permission
<tr id="@Model.Id">
    <td>
        @Html.DisplayFor(model => model.Student.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Date)
    </td>
    <td>
        @Html.DisplayFor(model => model.Duration)
    </td>
    <td>
        @Html.DisplayFor(model => model.Instructor.Name)
    </td>
    <td>
        <input type="button" value="Reason" class="btn btn-info btn-xs" onclick="$('#DataModal').modal('show').find('#ModalBody').text('@Model.Reason')" />
    </td>
    <td>
        <div class="btn-group btn-group-sm">
            @Ajax.ActionLink("Edit", "Edit", new { Id = Model.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "ModalBody" }, new { @class = "btn btn-warning", @onclick = "$('#DataModal').modal('show')" })
            <input type="button" value="Delete" class="btn btn-danger" onclick="Delete('@Model.Id')" />
        </div>
    </td>
</tr>
@Html.DropDownList("Course", ViewBag.CrList as SelectList, "Select Course", new {@class = "input-lg form-control"})
<script>
    $('#Course').change(function () {
        $(this).find("option:contains('Select Course')").remove();
        $.post("AddDegree",
            $('form').serialize(),
            {
                headers: {
                    'content-type': 'application/x-www-form-urlencoded'
                }
            }).then(function (result) { $('#students').html(result); },
            function (error) {
                $('table').remove();
                $('#save').remove();
            });
    })
</script>
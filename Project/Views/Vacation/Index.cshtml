@model IEnumerable<Project.Models.Vacation>

@{
    ViewBag.Title = "Vacations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vacations</h2>

@Ajax.ActionLink("New Vacation", "Create", "Vacation", new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "ModalBody" }, new { @class = "btn btn-link", @onclick = "$('#VacationModal').modal('show')" })

<span id="resp" class="alert-success text-capitalize text-success" style="float: right; display: none"></span>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody id="tbody">
            @foreach (var item in Model)
            {
                @Html.Partial("Row", item)
            }
        </tbody>
    </table>
</div>

<div id="VacationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Vacation</h4>
            </div>
            <div id="ModalBody" class="modal-body"></div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        function Delete(Id) {
            $("#VacationModal").modal("show")
                .find("#ModalBody").text("Are you sure you want to delete ?")
                .after('<div class="modal-footer"><a class="btn btn-danger" data-ajax="true" data-ajax-method="Post" data-ajax-success="Deleted" href="/Vacation/Delete/' + Id + '">Yes</a><button type="button" class="btn btn-primary" data-dismiss="modal">Close</button></div>');
        }

        function Deleted(data) {
            $("#VacationModal").modal("hide").find("#ModalBody").html("").siblings(".modal-footer").remove();
            $('#resp').text('Vacation Deleted Successfully!').show().fadeOut(3000);
            $("#" + data.Id).fadeOut(2000);
        }
    </script>
}